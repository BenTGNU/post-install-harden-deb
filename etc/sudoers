Defaults        env_reset, always_set_home, set_home, set_logname                                                                                                                                                                             
Defaults        !env_editor, editor="/usr/bin/vim"                                                                                                                                                                                            
Defaults        timestamp_timeout=300                                                                                                                                                                                                         
